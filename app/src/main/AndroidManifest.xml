<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shefin.attendancemanager">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/blauncher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/blauncher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PermissionChecker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Attendance Manager"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".asecActivity" />
        <activity android:name=".bsecActivity" />
        <activity
            android:name=".classtypeActivity"
            android:label="Attendance Manager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".csecActivity" />
        <activity android:name=".percentaActivity" />
        <activity android:name=".percentbActivity" />
        <activity android:name=".percentcActivity" />
        <activity
            android:name=".percenttypeActivity"
            android:label="Attendance Manager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".timeActivity"
            android:label="Attendance Manager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".timelabActivity"
            android:label="Attendance Manager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".typeselectActivity"
            android:label="Attendance Manager"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>